<div class="blogs-container container-fluid">
  <h1 class="text-uppercase font-weight-bold blog-title container">Blogs and news</h1>
  <div class="container" style="margin-bottom: 40px"><p class="blog-underline"></p></div>
  <div class="slider">
    <% @blogs.each do |b| %>
      <div class="blog border">
        <img src="/assets/<%= b[:image] %>.jpg" alt="" class="blog-image" >
        <div class="p-2">
          <h5 class="blog-title"><%= b[:title] %></h5>
          <p class="blog-info"><%= b[:source] %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center mt-5">
    <p class="next-prev prev mx-4"><i class="fas fa-chevron-left"></i></p>
    <p class="next-prev next mx-4"><i class="fas fa-chevron-right"></i></p>
