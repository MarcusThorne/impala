<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @titles.each_with_index do |t, i| %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" class="<%= 'active' if i == 0 %>"></li>
    <% end %>
  </ol>
  <div class="carousel-inner bg-dark">
    <% @titles.each_with_index do |t, i| %>
      <div class="carousel-item <%= 'active' if i == 0 %>">
        <img class="d-block w-100 vh-100 carousel-image img-fluid" src="/assets/<%= t[:image] %>.jpg" alt="Slide <%= i + 1 %>">
        <div class="carousel-caption">
          <h5 class="display-1"><%= t[:title] %></h5>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="availability">
  <% @options.each do |o| %>
    <div class="option">
      <h6 class="text text-s"><%= o[:title] %></h6>
      <h2 class="title title-l"><%= o[:date] %></h2>
    </div>
  <% end %>
  <button class="btn-danger text-light text-uppercase font-weight-bold d-flex justify-content-center title text-l">Check Availability</button>
</div>

