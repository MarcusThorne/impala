<!-- A div to keep page items from going underneith the navbar -->
<div class="navbar-placeholder"></div>

<!-- Navbar content exclusing drop down menu -->
<nav class="navbar navbar-expand-lg navbar-light fixed-top font-weight-bold fs-4">
  <div class="container-fluid">
    <%= link_to root_path, class:'navbar-brand' do %>
      <%= image_tag('logo.png') %>
    <% end %>
    <div class="nav-links justify-content-center font-weight-bold">
      <% @navLinks.each do |n| %>
        <%= link_to n[:title], n[:link], class: "nav-link text-uppercase mx-1" %>
      <% end %>
    </div>
    <div class="d-flex align-items-center">
      <%= link_to 'BOOK NOW', new_booking_path, class:'text-danger mr-3' %>
      <i class="navbar-toggler fas fa-bars p-0" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation"></i>
    </div>
  </div>
</nav>

<!-- Drop down menu for mobile -->
<div class="collapse collapse-container bg-white" id="navbarToggleExternalContent">
  <ul class="collapse-content container text-end font-weight-bold text-center mb-0" id="navbarToggleExternalContent">
    <% @navLinks.each do |n| %>
      <a class="nav-link text-dark text-uppercase my-4" href=""><%= n[:title] %></a>
      <div class="border-bottom"></div>
    <% end %>
  </ul>
</div>

<!-- Button for collapse content on mobile -->
<div class="collapse-toggler"></div>