<div class="carousel-inner mt-5" style="margin-bottom: -120px;">
  <img class="d-block w-100 vh-50 img-fluid" src="/assets/sunbeds.jpg" style="object-fit: cover; height: 800px;">
  <div class="carousel-caption">
    <div class="border w-50 p-5 mx-auto bg-white" style="margin-top: 600px;">
      <%= form_for @booking do |f| %>
        <div class="form-inputs container m-auto d-flex flex-column w-50 p-0">
          <%= f.label :full_name %>     
          <%= f.text_field :full_name,
                  required: true %>
          <%= f.label :email %>     
          <%= f.text_field :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <div class="d-flex justify-content-around align-center">
            <div class="flex flex-column">
              <%= f.label :Check_In %>            
              <%= f.date_field :check_in,
                          required: true %>
            </div>
            <div class="flex flex-column">
              <%= f.label :Check_out %>               
              <%= f.date_field :check_out,
                          required: true %>
            </div>
          </div>
          <div class="d-flex justify-content-between">
            <div class="flex flex-column">
              <%= f.label :time_of_arrival %>
              <%= f.number_field :arrival_time,
                          required: true %>                    
            </div>
            <div class="flex flex-column">
              <%= f.label :guests %>
              <%= f.number_field :guests,
                          required: true %>               
            </div>
          </div>
        </div>
        <div class="form-actions d-flex justify-content-center mt-5">
          <%= f.submit "Book", class: "btn btn-danger form_event_button w-50"%>
        </div>
      <% end %>
    </div>
  </div>
</div>

